<div id="new_challenger">
  <%- include('_edit_challenger', {challenger: {}}) %>
</div>

<button class="btn btn-success" onclick="$('#new_challenger > .modal').modal();">Add new challenger</button>

<h1>Challengers</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>status</th>
      <th>stage</th>
      <th>addr</th>
      <th>password</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <% for (var i in challengers ) { var challenger = challengers[i]; %>
    <tr class=<% if ( challenger.status == 'active' ) { %>"active"<% } %>>
      <td><a href="/challengers/<%= challenger._id %>"><%= challenger._id %></a></td>
      <td><%= challenger.name %></td>
      <td>
          <% if ( challenger.status == 'active' ) { %>
          <span class="label label-success">active</span>
          <% } else { %>
          <span class="label label-warning">deactive</span>
          <% } %>
        </form>
      </td>
      <td><%= challenger.stage %></td>
      <td><%= challenger.addr %></td>
      <td><%= challenger.password %></td>
      <td>
        <div id="edit_challenger<%= challenger._id%>">
          <%- include('_edit_challenger', {challenger: challenger}) %>
        </div>
        <button class="btn btn-danger" onclick="$('#edit_challenger<%= challenger._id%> > .modal').modal();">edit</button>
      </td>

    </tr>
    <% } %>
  </tbody>
</table>
